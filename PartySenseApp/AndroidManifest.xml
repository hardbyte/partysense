<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="party.sense.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <!-- Permissions  -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name= "android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name=".SplashActivity"
            android:label="@string/title_activity_party_sense_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".PartySenseMainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
            
            <intent-filter>
                
                <action android:name="android.intent.action.PartySenseMainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="PartySenseClubActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
            <intent-filter>
                
                <action android:name="android.intent.action.PartySenseClubActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="PartySenseMapActivity"
			android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
            <intent-filter>
                
                <action android:name="android.intent.action.PartySenseMapActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter></activity>
        <activity android:name="PartySenseSettingsActivity" android:windowSoftInputMode="stateHidden|adjustPan" android:screenOrientation="portrait">
            <intent-filter>
                
                <action android:name="android.intent.action.PartySenseSettingsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter></activity>
        
        
        <activity android:name="PartySenseDetailsActivity" android:windowSoftInputMode="stateHidden|adjustPan" android:screenOrientation="portrait">
            <intent-filter>                                
                <action android:name="android.intent.action.PartySenseDetailsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		
        <activity android:name="PartySenseGenreSelectActivity" android:windowSoftInputMode="stateHidden|adjustPan" android:screenOrientation="portrait">
            <intent-filter>                                
                <action android:name="android.intent.action.PartySenseGenreSelectActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="PartySenseLoginActivity" android:windowSoftInputMode="stateHidden|adjustPan" android:screenOrientation="portrait">
            <intent-filter>                                
                <action android:name="android.intent.action.PartySenseLoginActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <meta-data android:value="@string/app_id" android:name="com.facebook.sdk.ApplicationId"/>
        <activity android:name="com.facebook.LoginActivity" android:label="@string/app_name"></activity>
        <activity android:name="SetupActivity">
            <intent-filter>                                
                <action android:name="android.intent.action.SetupActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>